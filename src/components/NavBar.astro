<script>
    document.addEventListener('DOMContentLoaded', () => {
        const links = document.querySelectorAll('.nav-link');
        let lastScrollTop = 0;

        function setActiveLink() {
            const currentPage = window.location.pathname;

            links.forEach(link => {
                if (link.getAttribute('data-link') === currentPage) {
                    link.classList.add('bg-black', 'text-[#20808D]');
                    link.classList.remove('hover:bg-black', 'hover:text-[#20808D]');
                } else {
                    link.classList.remove('bg-black', 'text-[#20808D]');
                    link.classList.add('hover:bg-black', 'hover:text-[#20808D]');
                }
            });
        }

        // Set active link on page load
        setActiveLink();

        window.addEventListener('scroll', () => {
            const scrollTop = window.scrollY || document.documentElement.scrollTop;
            const navbar = document.querySelector('.navbar') as HTMLElement;

            if (navbar) {
                if (scrollTop > lastScrollTop) {
                    // Scrolling down
                    navbar.style.transform = 'translateY(-100%)'; // Hide navbar
                } else {
                    // Scrolling up
                    navbar.style.transform = 'translateY(0)'; // Show navbar
                }
            }

            lastScrollTop = scrollTop <= 0 ? 0 : scrollTop; // For Mobile or negative scrolling
        });
    });
</script>

<style>
