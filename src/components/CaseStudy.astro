---
import { Image } from 'astro:assets';
const { title, description, results, imageUrl } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden transition-transform hover:scale-105">
  <Image 
    src={imageUrl} 
    alt={title} 
    width={1600} 
    height={900} 
    class="w-full h-48 object-cover" 
    loading="lazy"
  />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 text-gray-800">{title}</h3>
    <p class="text-gray-600 mb-4 line-clamp-3">{description}</p>
    <details class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 cursor-pointer">
      <summary class="font-bold">Results</summary>
      <p class="mt-2">{results}</p>
    </details>
  </div>
</div>
