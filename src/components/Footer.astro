---
import { Icon } from 'astro-icon/components';
import Copyright from '../components/Copyright';
---

<footer class="flex items-center justify-center bg-gray-50 dark:bg-gray-900 text-black dark:text-white py-8">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:text-left justify-center">
      <div class="mb-6 md:mb-0">
        <div class="mb-6 md:mb-0">
          <h2 class="text-xl font-bold mb-2 dark:text-white">Contact Me</h2>
          <p class="font-light text-gray-500 dark:text-gray-300 mb-4">Got a question or a project? Let me know!</p>
          <a 
            href="https://www.linkedin.com/in/enoch-tetteh-80450211a/"
            class="inline-block bg-[#20808D] text-white rounded-full border border-[#20808D] hover:bg-black hover:text-[#20808D] py-2 px-4 text-sm font-medium text-center transition-colors duration-300"
          >
            Connect on LinkedIn
          </a>
        </div>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6">
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Resources</h2>
          <ul class="text-gray-500 dark:text-gray-400 font-medium">
            <li class="mb-4">
              <a href="/projects" class="hover:underline">Projects</a>
            </li>
            <li>
              <a href="/blog" class="hover:underline">Blog</a>
            </li>
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase dark:text-white">Follow us</h2>
          <div class="flex space-x-4">
            <a href="https://www.facebook.com/yourprofile" aria-label="Facebook page" class="text-gray-500 hover:text-[#1877F2] transition-colors duration-300">
              <Icon name="mdi:facebook" class="w-6 h-6" />
            </a>
            <a href="https://twitter.com/yourprofile" aria-label="Twitter account" class="text-gray-500 hover:text-[#1DA1F2] transition-colors duration-300">
              <Icon name="mdi:twitter" class="w-6 h-6" />
            </a>
            <a href="https://www.linkedin.com/in/enoch-tetteh-80450211a/" aria-label="LinkedIn account" class="text-gray-500 hover:text-[#0A66C2] transition-colors duration-300">
              <Icon name="mdi:linkedin" class="w-6 h-6" />
            </a>
            <a href="https://github.com/etetteh" aria-label="GitHub account" class="text-gray-500 hover:text-gray-900 dark:hover:text-white transition-colors duration-300">
              <Icon name="mdi:github" class="w-6 h-6" />
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="border-t border-gray-200 dark:border-gray-700 mt-8">
      <Copyright client:load />
    </div>
  </div>
</footer>
